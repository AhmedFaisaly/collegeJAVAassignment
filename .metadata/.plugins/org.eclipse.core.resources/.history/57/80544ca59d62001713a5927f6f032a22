import java.util.Scanner;

public class RecipeIngredientTest {

	public static void main(String[] args) {
		
		// Call default constructor
		RecipeIngredient recipeIngredient = new RecipeIngredient();
		
		// display recipe ingredient
		System.out.print("Initial amount is ");
		recipeIngredient.getAmount();
		System.out.println();
		
		// Get user input
		Scanner input = new Scanner(System.in);
		System.out.print("Enter value: ");
		double val = input.nextDouble();
		input.nextLine();
		System.out.print("Enter unit: ");
		String unit = input.nextLine();
		System.out.print("Enter ingredient: ");
		String ing = input.nextLine();
		input.close();
		
		// Call initial constructor and set
		recipeIngredient = new RecipeIngredient(ing);
		recipeIngredient.setValue(val,unit);
		
		// display recipe ingredient
		System.out.print("Amount is ");
		recipeIngredient.getAmount();
		System.out.println();
		
	}

}
